---
import halloweenSong from "../assets/this-is-halloween.mp4";

---
<audio src={halloweenSong} autoplay id="audio" class='fixed -z-30'></audio>

<script>
  const $audio = document.querySelector('#audio') as HTMLAudioElement;

  document.addEventListener('DOMContentLoaded', () => {
    if ($audio) {
      $audio.volume = 40;
    }
  })
</script>